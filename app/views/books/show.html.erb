<div class="container main-container">
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@bookd.user) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @bookd.user.name %>
						<% end %>
					</td>
					<td><%= link_to @bookd.title, @bookd %></td>
					<td><%= @bookd.body %></td>
					<% if @bookd.user_id == current_user.id %>
					<td><%= link_to "Edit",edit_book_path(@bookd), class: "btn-sm btn-success edit_book_#{@bookd.id}" %></td>
					<td><%= link_to "Destroy",@bookd, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@bookd.id}" %></td>
					<% end %>
				</tr>
		</table>

	</div>
</div>
</div>

