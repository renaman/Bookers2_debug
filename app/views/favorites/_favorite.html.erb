<% if book.favorited_by?(current_user) %>
	<%= link_to book_favorites_path(book), method: :delete, remote: true, id:"favorite_judgment" do %>
		<i class="fa fa-heart" aria-hidden="true" style="color: red;">	
		</i>
	<% end %>
	<%= book.favorites.count %>
<% else %>
	<%= link_to book_favorites_path(book), method: :post, remote: true, id:"favorite_judgment" do %>
		<i class="fa fa-heart-o" area-hidden="true" style="color: red;">
		</i>
	<% end %>
	<%= book.favorites.count %>
<% end %>